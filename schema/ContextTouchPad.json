{
  "$id": "https://kosmos-lab.de/schema/ContextTouchPad.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContextTouchPad",
  "type": "object",
  "additionalProperties": false,
  "examples": [
    {"gesture": "UP"},
    {"gesture": "0"}
  ],
  "required": [
    "gesture"
  ],
  "properties": {
    "gesture": {
      "description": "the gesture currently detected, will jump back to 0/NONE",
      "readOnly": true,
      "type": "string",
      "enum": ["0","UP","DOWN","LEFT","RIGHT","SHORTPRESS","LONGPRESS"]
    }
  }
}